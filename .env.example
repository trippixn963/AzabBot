# Azab Discord Bot - Environment Configuration Template
# ======================================================
# Copy this file to .env and fill in your values
# NEVER commit your actual .env file to version control!

# Required: Discord Bot Configuration
# ====================================
DISCORD_TOKEN=your_discord_bot_token_here
DEVELOPER_ID=your_discord_user_id

# Required: Channel Configuration
# ================================
LOGS_CHANNEL_ID=your_moderation_logs_channel_id
PRISON_CHANNEL_IDS=your_prison_channel_id
GENERAL_CHANNEL_ID=your_general_channel_id
POLLS_ONLY_CHANNEL_ID=your_polls_only_channel_id  # Channel where only polls are allowed
PERMANENT_POLLS_CHANNEL_ID=1407316206792343592    # Hardcoded polls-only channel (always active)

# Required: Role Configuration
# =============================
MUTED_ROLE_ID=your_muted_role_id

# Required: OpenAI Configuration
# ===============================
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Bot Behavior Settings
# ================================
RESPONSE_PROBABILITY=70        # Percentage chance to respond (default: 70)
AI_MODEL=gpt-4o-mini          # OpenAI model to use (default: gpt-4o-mini, 3x cheaper than gpt-3.5)
MAX_RESPONSE_LENGTH=150       # Maximum response length (default: 150)
COOLDOWN_SECONDS=10           # User cooldown in seconds (default: 10)
BATCH_WAIT_TIME=2             # Batch processing wait time (default: 2)

# Optional: Display Settings
# ===========================
DEVELOPER_NAME=حَـــــنَّـــــا
SERVER_NAME=discord.gg/syria
EMBED_COLOR_SUCCESS=0x00FF00
EMBED_COLOR_ERROR=0xFF0000
EMBED_COLOR_RELEASE=0x00FF00

# Optional: Rate Limiting
# ========================
PRISONER_COOLDOWN_SECONDS=10

# Optional: Text Limits
# ======================
MUTE_REASON_MAX_LENGTH=100

# Optional: Prison Channel Settings
# ===================================
PRISON_MESSAGE_SCAN_LIMIT=500  # Max messages to scan when deleting prisoner messages (default: 500)

# Optional: Permission Configuration
# ===================================
MODERATOR_IDS=comma,separated,discord,ids
IGNORE_USER_IDS=comma,separated,discord,ids