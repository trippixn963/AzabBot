# Azab Discord Bot - Environment Configuration Example
# ================================================
#
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# Discord Bot Configuration
# =========================
DISCORD_TOKEN=your_discord_bot_token_here
DEVELOPER_ID=your_discord_user_id_here

# OpenAI AI Service Configuration
# ===============================
OPENAI_API_KEY=your_openai_api_key_here

# Channel Configuration
# ====================
LOGS_CHANNEL_ID=channel_id_for_moderation_logs
PRISON_CHANNEL_ID=channel_id_for_prison_messages
MUTED_ROLE_ID=role_id_for_muted_users

# Bot Behavior Settings
# =====================
RESPONSE_PROBABILITY=70        # Percentage chance to respond to non-muted users
AI_MODEL=gpt-3.5-turbo        # OpenAI model for AI responses
MAX_RESPONSE_LENGTH=150       # Maximum characters in AI responses
COOLDOWN_SECONDS=10           # Cooldown between responses to same user
BATCH_WAIT_TIME=2             # Wait time for batch processing

# Permission Configuration
# ========================
MODERATOR_IDS=admin_user_id_1,admin_user_id_2

# User Management
# ===============
IGNORE_USER_IDS=              # Comma-separated list of user IDs to ignore
